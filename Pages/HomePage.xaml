            <Label Grid.Column="0"
                   Text="VibeCircle"
                   TextColor="White"
                   FontSize="25"
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>
            <Grid Grid.Column="2" 
                  ColumnDefinitions="*, *, *"
                  Margin="0, 0, 15, 0"
                  ColumnSpacing="20"
                  VerticalOptions="Center">

                <controls:WhiteImage  Grid.Column="0"
                                      HeightRequest="{StaticResource WhiteImageSize}"
                                      WidthRequest="{StaticResource WhiteImageSize}"
                                      Source="plus"/>
                <Grid Grid.Column="1">
                    <controls:WhiteImage  
                                      HeightRequest="{StaticResource WhiteImageSize}"
                                      WidthRequest="{StaticResource WhiteImageSize}"
                                      Source="bell"/>
