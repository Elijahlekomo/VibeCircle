                             WidthRequest="10"
                             HeightRequest="10"
                             VerticalOptions="Start"
                             HorizontalOptions="End"/>
                </Grid>
                <controls:WhiteImage  Grid.Column="2"
                                      HeightRequest="{StaticResource WhiteImageSize}"
                                      WidthRequest="{StaticResource WhiteImageSize}"
                                      Source="user"/>
            </Grid>
        </Grid>
    </Shell.TitleView>

