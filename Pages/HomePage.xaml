<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="VibeCircle.Pages.HomePage"
             Title="HomePage">
    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto, *, Auto">
            <Label Grid.Column="0"
                   Text="VibeCircle"
                   TextColor="White"
                   FontSize="25"
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>
            <Grid Grid.Column="2" 
                  ColumnDefinitions="*, *, *"
                  Margin="0, 0, 15, 0"
                  VerticalOptions="Center">
                <Image Grid.Column="0"
                       HeightRequest="20"
                       WidthRequest="20"
                       Source="plus"/>
                <Image Grid.Column="0"
                       HeightRequest="20"
                       WidthRequest="20"
                       Source="bell"/>
                <Image Grid.Column="0"
                       HeightRequest="20"
                       WidthRequest="20"
                       Source="user"/>
            </Grid>
        </Grid>
    </Shell.TitleView>
</ContentPage>