                    Margin="0,0,-50,0"
                    BackgroundColor="{StaticResource Primary}"
                    HeightRequest="24"
                    StrokeShape="RoundRectagle 12"
                    StrokeThickness="0"
                    VerticalOptions="End"
                    WidthRequest="24">
