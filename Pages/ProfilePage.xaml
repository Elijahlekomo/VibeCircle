                        HeightRequest="12"
                        HorizontalOptions="Center"
                        Source="pencil"
                        VerticalOptions="Center"
                        WidthRequest="12" />
                    <Border.Shadow>
                        <Shadow />
                    </Border.Shadow>
                </Border>
            </Grid>

            <controls:Spacer Space="10" />

            <Label
                Margin="0,10,0,0"
                FontAttributes="Bold"
                FontSize="18"
                HorizontalOptions="Center"
                Text="Abbay Prince" />
            <Label
                FontSize="16"
                HorizontalOptions="Center"
                Text="email@email.com" />

            <BoxView Style="{StaticResource fadedLine}" />

            <Border
                HeightRequest="30"
                Stroke="{StaticResource Primary}"
