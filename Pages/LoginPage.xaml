<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:VibeCircle.Controls"
             x:Class="VibeCircle.Pages.LoginPage"
             Title="Login"
             Padding="20">
    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, Auto"
       RowSpacing="20"
       VerticalOptions="Center">
            <Image Grid.Row="1"
              HeightRequest="128"
              Source="socialmedia"/>

            <Label Grid.Row="1"
              FontAttributes="Bold"
              FontSize="25"
              HorizontalOptions="Center"
              Text="Login"/>
            <VerticalStackLayout Grid.Row="2" Spacing="2">
                <Label Text="Username" Style="{StaticResource formlabel}"/>

                <controls:NoBorderEntry BackgroundColor="LightBlue" Placeholder="Enter Username"/>
                <controls:Spacer/>

                <Label Text="Password" Style="{StaticResource formlabel}"/>

                <controls:NoBorderEntry IsPassword="True" Placeholder="Enter Password" BackgroundColor="PaleTurquoise"/>

                <controls:Spacer/>

                <Button Style="{StaticResource rounded}" Text="Login"/>
                <Grid ColumnDefinitions="*, Auto, *"
               ColumnSpacing="5">
                    <BoxView Grid.Column="0"
                      Style="{StaticResource fadedLine}"/>
                    <Label Grid.Column="1" HorizontalOptions="Center" Text="New User?"/>
                    <BoxView Grid.Column="2"
                      Style="{StaticResource fadedLine}"/>

                </Grid>
                <controls:Spacer/>
                <controls:Spacer/>
                <Button Style="{StaticResource rounded}" Text="Register"/>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>